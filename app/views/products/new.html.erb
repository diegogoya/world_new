<h1> Add a new Product </h1>
<%= flash[:error] %>
<%= form_for [@user, @product], :html => { :multipart => true} do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :due_date %>
  <%= f.date_field :deadline_for_bidding %>

  <%= f.label :imageproduct %>
  <%= f.file_field :imageproduct %>

  <%= f.button %>
<% end %>
